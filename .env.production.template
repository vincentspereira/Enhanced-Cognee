# Enhanced Cognee - Production Environment Configuration Template
# Copy this file to .env.production and fill in your production values

# ============================================================================
# SECURITY SECRETS - GENERATE STRONG, UNIQUE VALUES
# ============================================================================

# Database Credentials
POSTGRES_USER=cognee_user
POSTGRES_PASSWORD=CHANGE_THIS_GENERATE_STRONG_PASSWORD
POSTGRES_DB=cognee_db

# Neo4j Credentials
NEO4J_PASSWORD=CHANGE_THIS_GENERATE_STRONG_PASSWORD

# Redis Credentials
REDIS_PASSWORD=CHANGE_THIS_GENERATE_STRONG_PASSWORD

# API Security
COGNEE_API_KEY=CHANGE_THIS_GENERATE_RANDOM_API_KEY_64_CHARS

# Grafana Admin
GRAFANA_PASSWORD=CHANGE_THIS_GENERATE_STRONG_PASSWORD

# ============================================================================
# DATABASE PORTS (Adjusted for production)
# ============================================================================

# PostgreSQL
POSTGRES_PORT=25432

# Qdrant
QDRANT_PORT=26333
QDRANT_GRPC_PORT=26334

# Neo4j
NEO4J_BOLT_PORT=27687
NEO4J_HTTP_PORT=27474

# Redis
REDIS_PORT=26379

# MCP Server
MCP_SERVER_PORT=8000

# ============================================================================
# PRODUCTION SETTINGS
# ============================================================================

# Environment
ENVIRONMENT=production

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Debug Mode (ALWAYS false in production)
DEBUG=false

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================

# Connection Pool Settings
MAX_CONNECTIONS=100
MIN_CONNECTIONS=10
CONNECTION_TIMEOUT=30
QUERY_TIMEOUT=60

# Cache Settings
CACHE_TTL=3600
CACHE_MAX_SIZE=10000

# Memory Management
MAX_MEMORY_MB=2048
GC_THRESHOLD=700

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================

# Metrics
ENABLE_METRICS=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Tracing
ENABLE_TRACING=true
TRACING_SAMPLE_RATE=0.1

# Health Checks
HEARTBEAT_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# ============================================================================
# SECURITY SETTINGS
# ============================================================================

# Authentication
ENABLE_AUTH=true
AUTH_PROVIDER=oauth2
OAUTH2_ISSUER=https://your-oauth-provider.com
OAUTH2_AUDIENCE=enhanced-cognee-api

# CORS (Adjust for your domain)
CORS_ALLOWED_ORIGINS=https://your-domain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-API-Key

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200

# SSL/TLS
FORCE_HTTPS=true
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ============================================================================
# BACKUP & MAINTENANCE
# ============================================================================

# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION=true

# Maintenance Window
MAINTENANCE_WINDOW_START=0200
MAINTENANCE_WINDOW_END=0400
MAINTENANCE_DAY=Sunday

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Multi-Language Support
MULTI_LANGUAGE_ENABLED=true
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,ru,zh,ja,ko,ar

# Advanced Features
ENABLE_DEDUPLICATION=true
ENABLE_AUTO_SUMMARIZATION=true
ENABLE_CROSS_AGENT_SHARING=true
ENABLE_REALTIME_SYNC=true

# Experimental Features
ENABLE_EXPERIMENTAL_FEATURES=false

# ============================================================================
# LLM CONFIGURATION
# ============================================================================

# Primary LLM Provider
LLM_PROVIDER=anthropic
LLM_MODEL=claude-3-5-sonnet-20241022
LLM_API_KEY=YOUR_ANTHROPIC_API_KEY
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096

# Fallback LLM Provider
LLM_FALLBACK_PROVIDER=openai
LLM_FALLBACK_MODEL=gpt-4-turbo
LLM_FALLBACK_API_KEY=YOUR_OPENAI_API_KEY

# ============================================================================
# NOTIFYING & ALERTING
# ============================================================================

# Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
NOTIFICATION_FROM=noreply@your-domain.com
NOTIFICATION_TO=alerts@your-domain.com

# Alert Thresholds
ALERT_CPU_PERCENT=80
ALERT_MEMORY_PERCENT=85
ALERT_DISK_PERCENT=90
ALERT_RESPONSE_TIME_MS=5000

# ============================================================================
# DEVELOPMENT/OVERRIDE SETTINGS (DO NOT MODIFY IN PRODUCTION)
# ============================================================================

# Docker Compose Project Name
COMPOSE_PROJECT_NAME=enhanced-cognee-prod

# ============================================================================
# INSTRUCTIONS
# ============================================================================

# 1. Copy this template: cp .env.production.template .env.production
# 2. Generate strong passwords using: openssl rand -base64 32
# 3. Update all CHANGE_THIS placeholders with actual values
# 4. Set proper domain names in CORS settings
# 5. Configure OAuth2 provider for authentication
# 6. Add your LLM API keys
# 7. Review and adjust performance tuning values
# 8. Set up email notifications for alerts
# 9. DO NOT commit .env.production to version control
# 10. Add .env.production to .gitignore

